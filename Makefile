################################################################################
################################################################################
#                                                                              #
#                                  Variables                                   #
#                                                                              #
################################################################################

.DEFAULT: build

################################################################################
#                                                                              #
#                               Public Commands                                #
#                                                                              #
################################################################################

build: install

install:
	@sh -c "./build/1-compile.sh"
	@sh -c "./build/2-deploy.sh"

clear-cache:
	@sh -c "cd drupal && make -s clear-cache"

sass:
	@echo "Updating css"
	@sh -c "grunt sass"
	@sh -c "cd drupal && make -s clear-cache"

test:
	@sh -c "cd drupal && make -s test"

################################################################################
#                                                                              #
#                               Shortcuts                                      #
#                                                                              #
################################################################################

cc: clear-cache
