<div class="content-heading">
    <h1>{{ 'Events'|t }}</h1>
    <h2 class="heading-large">{{ 'List of the upcomming events'|t }}</h2>
</div>

<div class="row">
    {% if results is not null %}
        {% if total > 0 %}
            <div class="row">
                <h3 class="heading-xlarge">{{ total }} <span class="font-xsmall">{{ 'events '|t }}</span></h3>
            </div>
            {% for row in results %}
                <div class="row row-bordered">
                    <h3>
                        <a href="{{ url(
                        'events.details',
                        {'eventId': row._id, 'search': search}
                        ) }}"
                           id="opportunity-link">
                            {{ row._source.title }}
                        </a>
                    </h3>
                    <p class="meta-inline font-small">
                        {# Start and End date #}
                        {% if row._source.start_date != row._source.end_date %}
                            {{ row._source.start_date|date("d-m-Y") }} |
                            {{ row._source.end_date|date("d-m-Y") }} |
                        {% else %}
                            {{ row._source.start_date|date("d-m-Y") }} |
                        {% endif %}
                        {# Country of origin #}
                        <span class="flag-icon flag-icon-{{ row._source.country_code|lower }}"></span>
                        {{ row._source.country }}
                    </p>
                    <p>
                        {{ row._source.description }}
                    </p>
                </div>

            {% endfor %}

            {% include 'themes/custom/een/templates/pagination.html.twig'
            with {
            'route': route,
            'page': page,
            'resultPerPage': resultPerPage,
            'pageTotal': pageTotal
            } only %}

        {% else %}
            {{ 'No Results found'|t }}
        {% endif %}
    {% endif %}
</div>




