{% if opportunity is not empty %}
    <div>
        <div>
            <a class="button"
               href="{{ url('opportunities.search',{'search': search, 'opportunity_type': opportunity_type}) }}">
                {{ 'Back to search results'|t }}
            </a>
        </div>
        <div>
            <h1>{{ 'Opportunity'|t }}</h1>
            <h2 class="heading-large">{{ opportunity._source.title }}</h2>
            <div>
                <div>
                    <label>{{ 'Country of origin:'|t }}</label>
                    <p>
                        <span>{{ opportunity._source.country_code }}</span>
                        {{ opportunity._source.country }}
                    </p>
                </div>
                <div>
                    <label>{{ 'Last updated:'|t }}</label>
                    <p>{{ opportunity._source.date|date('m/d/Y') }}</p>
                </div>
                <div>
                    <label>{{ 'Opportunity ID:'|t }}</label>
                    <p>{{ opportunity._source.id }}</p>
                </div>
            </div>
        </div>
    </div>
    <hr/>
    <div>
        <div class="column-one-third">
            <h3 class="heading-medium">{{ 'Contents'|t }}</h3>
        </div>
        <div class="column-two-thirds">
            <h3 class="heading-medium">{{ 'Abstract'|t }}</h3>
            <p>
                {% if opportunity._source.summary %}
                    {{ opportunity._source.summary }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <h3 class="heading-medium">{{ 'Description'|t }}</h3>
            <p>
                {% if opportunity._source.description %}
                    {{ opportunity._source.description }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <h3 class="heading-medium">{{ 'Partner expertise sought'|t }}</h3>
            <p>
                {% if opportunity._source.partner_expertise %}
                    {{ opportunity._source.partner_expertise }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <h3 class="heading-medium">{{ 'Advantages and innovations'|t }}</h3>
            <p>
                {% if opportunity._source.advantage %}
                    {{ opportunity._source.advantage }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <h3 class="heading-medium">{{ 'Development Stage'|t }}</h3>
            <p>
                {% if opportunity._source.stage %}
                    {{ opportunity._source.stage }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <h3 class="heading-medium">{{ 'IPR'|t }}</h3>
            <p>
                {% if opportunity._source.ipr or opportunity._source.ipr_comment %}
                    {{ opportunity._source.ipr }}
                    {{ opportunity._source.ipr_comment }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
        </div>
    </div>
    <hr/>
    <div>
        <div class="column-one-third">
            <h3 class="heading-medium">{{ 'Express your interest'|t }}</h3>
        </div>
        <div class="column-two-thirds">
            <form action="{{ form['#action'] }}" method="POST">
                {{ form.description }}
                {{ form.interest }}
                {{ form.more }}
                {{ form.email }}
                {{ form.form_build_id }}
                {{ form.form_id }}
                <hr/>
                <div>
                    <h4 class="heading-small">{{ 'By sumitting this information, I understand that:'|t }}</h4>
                    <p>{{ 'An EEN adviser  will review your expression of interest and share with their client if it\'s what they\'re looking for. If we connect you, our involvement will step back at it, but we need you to keep us informed of follow on discussions and negociations'|t }}</p>
                </div>
                {{ form.actions }}
            </form>
        </div>
    </div>
{% endif %}
