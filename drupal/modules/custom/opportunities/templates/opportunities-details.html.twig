{% if opportunity is not empty %}
    <div>
        <div>
            <a class="back-link"
               href="{{ url('opportunities.search',{'search': search, 'opportunity_type': opportunity_type}) }}">
                {{ '< Back to search results'|t }}
            </a>
        </div>
        <div class="content-heading">
            <h1>{{ 'Opportunity'|t }}</h1>
            <h2 class="heading-large">{{ opportunity._source.title }}</h2>
            <div class="meta">
                <div class="meta-data">
                    <label>{{ 'Country of origin:'|t }}</label>
                    <p>
                        <span>{{ opportunity._source.country_code }}</span>
                        {{ opportunity._source.country }}
                    </p>
                </div>
                {% if opportunity._source.date|date('U') > '-3 days'|date('U') %}
                   <div class="meta-data">
                        <label>{{ 'Last updated:'|t }}</label>
                        <p>{{ opportunity._source.date|time_diff }}</p>
                    </div>
                {% endif %}
                <div class="meta-data">
                    <label>{{ 'Opportunity ID:'|t }}</label>
                    <p>{{ opportunity._source.id }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="grid-row">
        <div class="column-one-third">
            <div class="contents-list">
                <h3 class="heading-medium">{{ 'Contents'|t }}</h3>
                <ul>
                    <li><a href="#abstract">{{ 'Abstract'|t }}</a></li>
                    <li><a href="#description">{{ 'Description'|t }}</a></li>
                    <li><a href="#partner_expertise_sought">{{ 'Partner expertise sought'|t }}</a></li>
                    <li><a href="#advantages_and_innovations">{{ 'Advantages and innovations'|t }}</a></li>
                    <li><a href="#development_stage">{{ 'Development Stage'|t }}</a></li>
                    <li><a href="#ipr">{{ 'IPR'|t }}</a></li>
                </ul>
                
                 <a class="button-brand" href="#express_your_interest">Express your interest</a>
            </div>
        </div>
        <div class="column-two-thirds contents-text-block">
            <h3 class="heading-medium" id="abstract">{{ 'Abstract'|t }}</h3>
            <p>
                {% if opportunity._source.summary %}
                    {{ opportunity._source.summary }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <h3 class="heading-medium" id="description">{{ 'Description'|t }}</h3>
            <p>
                {% if opportunity._source.description %}
                    {{ opportunity._source.description }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <h3 class="heading-medium" id="partner_expertise_sought">{{ 'Partner expertise sought'|t }}</h3>
            <p>
                {% if opportunity._source.partner_expertise %}
                    {{ opportunity._source.partner_expertise }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <h3 class="heading-medium" id="advantages_and_innovations">{{ 'Advantages and innovations'|t }}</h3>
            <p>
                {% if opportunity._source.advantage %}
                    {{ opportunity._source.advantage }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <h3 class="heading-medium" id="development_stage">{{ 'Development Stage'|t }}</h3>
            <p>
                {% if opportunity._source.stage %}
                    {{ opportunity._source.stage }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <h3 class="heading-medium" id="ipr">{{ 'IPR'|t }}</h3>
            <p>
                {% if opportunity._source.ipr or opportunity._source.ipr_comment %}
                    {{ opportunity._source.ipr }}
                    {{ opportunity._source.ipr_comment }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
        </div>
    </div>
    <hr/>
    <div class="grid-row">
        <div class="column-one-third">
            <h3 class="heading-medium single-header-one-col" id="express_your_interest">{{ 'Express your interest'|t }}</h3>
        </div>
        <div class="column-two-thirds">
            <form action="{{ form['#action'] }}" method="POST" class="form-opportunities">
                <div class="form-section">
                    {{ form.description }}
                </div>
                <div class="form-section">
                    {{ form.interest }}
                </div>
                <div class="form-section">
                    {{ form.more }}
                </div>
                {{ form.email }}
                {{ form.form_build_id }}
                {{ form.form_id }}
                <hr/>
                <div>
                    <h4 class="heading-small">{{ 'By sumitting this information, I understand that:'|t }}</h4>
                    <p>{{ 'An EEN adviser  will review your expression of interest and share with their client if it\'s what they\'re looking for. If we connect you, our involvement will step back at it, but we need you to keep us informed of follow on discussions and negociations'|t }}</p>
                </div>
                {{ form.actions }}
            </form>
        </div>
    </div>
{% endif %}
