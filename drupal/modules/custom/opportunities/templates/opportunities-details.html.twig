{% set params = {} %}
{% if search %}
    {% set params = params|merge({'search': search}) %}
{% endif %}
{% if opportunity_type %}
    {% set params = params|merge({'opportunity_type': opportunity_type}) %}
{% endif %}
{% if country %}
    {% set params = params|merge({'country': country}) %}
{% endif %}

{% if opportunity is not empty %}
    {% if token %}
        <div class="status-summary">
            <p>
                {{ 'Thank you for verifying your email address '|t }}
                <span class="bold-small">{{ email }}</span>
                <a class="button-brand" href="#express_your_interest">{{ 'Continue with application'|t }}</a>
            </p>
        </div>
    {% endif %}
    <div>
        <div>
            <a class="back-link"
               href="{{ url('opportunities.search', params) }}">
                {{ '&lt; Back to search results'|t }}
            </a>
        </div>
        <div class="content-heading">
            <h1>{{ 'Opportunity'|t }}</h1>
            <h2 class="heading-large">{{ opportunity._source.title }}</h2>
            <div class="meta">
                <div class="meta-data">
                    <label>{{ 'Country of origin:'|t }}</label>
                    <p>
                        {% set flag = opportunity._source.country_code|lower %}
                        {% if flag == 'uk' %}
                            {% set flag = 'gb' %}
                        {% endif %}
                        <span class="flag-icon flag-icon-{{ flag }}"></span>
                        {{ opportunity._source.country }}
                    </p>
                </div>
                {% if opportunity._source.date|date('U') > '-5 days'|date('U') %}
                    <div class="meta-data">
                        <label>{{ 'Last updated:'|t }}</label>
                        <p>{{ opportunity._source.date|time_diff }}</p>
                    </div>
                {% endif %}
                <div class="meta-data">
                    <label>{{ 'Opportunity ID:'|t }}</label>
                    <p>{{ opportunity._source.id }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="grid-row grid-row-1">
        <div class="column-one-third sticky-nav-container">

            <div class="contents-list sticky-sidebar">
                <h3 class="heading-medium sticky-sidebar-header">{{ 'Contents'|t }}</h3>
                <ul class="sticky-sidebar-content">
                    <li><a href="#abstract">{{ 'Abstract'|t }}</a></li>
                    <li><a href="#description">{{ 'Description'|t }}</a></li>
                    <li><a href="#partner_expertise_sought">{{ 'Partner expertise sought'|t }}</a></li>
                    <li><a href="#advantages_and_innovations">{{ 'Advantages and innovations'|t }}</a></li>
                    <li><a href="#development_stage">{{ 'Development Stage'|t }}</a></li>
                    <li><a href="#ipr">{{ 'Intellectual Property Rights (IPR)'|t }}</a></li>
                </ul>

                <a class="button-brand" href="#express_your_interest">Apply for this project</a>
                <hr/>
                <div class="save-actions">
                    <h3>Save for later</h3>
                    <div class="save-action sa-pin">
                        <a href="#">Pin to favourites</a>
                    </div>
                    <div class="save-action sa-share">
                        <a href="mailto:?subject={{ mail.subject|url_encode }}&body={{ mail.body|url_encode }}"
                           target="_top">Share opportunity</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="column-two-thirds contents-text-block">
            <h3 class="heading-medium" id="abstract">{{ 'Abstract'|t }}</h3>
            <p>
                {% if opportunity._source.summary %}
                    {{ opportunity._source.summary }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <h3 class="heading-medium" id="description">{{ 'Description'|t }}</h3>
            <p>
                {% if opportunity._source.description %}
                    {{ opportunity._source.description }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <h3 class="heading-medium" id="partner_expertise_sought">{{ 'Partner expertise sought'|t }}</h3>
            <p>
                {% if opportunity._source.partner_expertise %}
                    {{ opportunity._source.partner_expertise }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <h3 class="heading-medium" id="advantages_and_innovations">{{ 'Advantages and innovations'|t }}</h3>
            <p>
                {% if opportunity._source.advantage %}
                    {{ opportunity._source.advantage }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <h3 class="heading-medium" id="development_stage">{{ 'Development Stage'|t }}</h3>
            <p>
                {% if opportunity._source.stage %}
                    {{ opportunity._source.stage }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <h3 class="heading-medium" id="ipr">{{ 'Intellectual Property Rights (IPR)'|t }}</h3>
            <p>
                {% if opportunity._source.ipr or opportunity._source.ipr_comment %}
                    {{ opportunity._source.ipr }}
                    {{ opportunity._source.ipr_comment }}
                {% else %}
                    {{ 'Not available'|t }}
                {% endif %}
            </p>
            <div id="navstop"></div>
        </div>
    </div>
    <hr/>
    <div class="grid-row">
        <div class="column-one-third">
            <h3 class="heading-medium single-header-one-col"
                id="express_your_interest">{{ 'Apply for this project'|t }}</h3>
        </div>
        <div class="column-two-thirds">

            <div class="progressor">
                <h3>How it works</h3>
                <div class="step-container">
                    <ul class="progressbar">
                        <li class="active step1"><span>Submit your application to EEN</span></li>
                        <li class="step2"><span>Later, EEN advisors will present applications</span></li>
                        <li class="step3"><span>Then, client selects winning application(s)</span></li>
                    </ul>
                </div>
            </div>

            {% if token == false %}
                {{ form_email }}
                <div class="transp">
            {% endif %}

                <form action="{{ form['#action'] }}" method="{{ form['#method'] }}" class="form-opportunities">

                    {#Required hidden field for drupal form#}
                    {{ form.form_build_id }}
                    {{ form.form_id }}

                    <div class="form-section">
                        {{ form.description }}
                    </div>
                    <div class="form-section">
                        {{ form.interest }}
                    </div>
                    <div class="form-section">
                        {{ form.more }}
                    </div>
                    {{ form.email }}
                    <div id="edit-email--description" class="description">
                        {{ 'You will be asked to create your EEN account if you do not already have one. If you do not have an email address, '|t }}
                        <a class="edit-email--phone-number"
                           href="#edit-phone">{{ 'please enter your phone number instead.'|t }}</a>
                    </div>
                    <div class="eoi-phone-number">
                        {{ form.phoneStatus }}
                        {{ form.phone }}
                    </div>
                    {{ form.other_email }}
                    <hr/>
                    <div>
                        <h4 class="heading-small">{{ 'By submitting this information, I understand that:'|t }}</h4>
                        <ul>
                            <li>{{ 'We will be in touch within 2 days'|t }}</li>
                            <li>
                                {{ 'As per the '|t }}
                                <a href="#">{{ 'privacy policy'|t }}</a>,
                                {{ 'my personal information will not be shared.' }}
                            </li>
                            <li>{{ 'Information I provide in this application can be shared with potential partner in question after an EEN adviser has reviewed it and deemed it is what the receiving client is lookin for.'|t }}</li>
                            <li>{{ 'If we connect you, our involvement will step back a bit, but you need to keep us informed of follow on discussions and negociations.'|t }}</li>
                        </ul>
                    </div>
                    {{ form.actions }}
                </form>
            {% if token is not null %}
                </div>
            {% endif %}

        </div>
    </div>
{% endif %}
