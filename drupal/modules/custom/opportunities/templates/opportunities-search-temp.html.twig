<div class="grid-row">
    <div class="column-two-thirds">
        
        <h1 class="heading-large">Companies house search</h1>
        <form action="{{ form['#action'] }}" method="POST" class="form-companies-house-search">
            <div class="form-section">
                {{ form.company_name }} {{ form.search }} 
                
                <div class="form-group" id="ch_search-results">
                    <ul class="companies-house-list"></ul>
                </div>
            </div>
            
            <div class="form-section">
                {{ form.no_company_number }}
            </div>
            

            <div class="form-section">
                {{ form.company_number }}
            </div>
        </form>
        
    </div>
</div>