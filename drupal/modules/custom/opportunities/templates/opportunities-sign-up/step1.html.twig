<div class="grid-row">
    <div class="column-full">
        <div class="form-heading header-secondary">
            <h1 class="heading-large" tabindex="0">Thank you for applying for this project</h1>
            <p>To complete your project application please create an account</p>
        </div>
    </div>

    <div class="column-two-thirds">

        <form action="{{ form['#action'] }}" method="{{ form['#method'] }}" class="form-companies-house-search">

            {#Required hidden field for drupal form#}
            {{ form.form_build_id }}
            {{ form.form_id }}

            <p class="heading-medium step" tabindex="0">Step 1 of 3</p>
            <h2 class="heading-large">About you</h2>
            <div class="form-section">
                {{ form.firstname }}
            </div>

            <div class="form-section">
                {{ form.lastname }}
            </div>

            <div class="form-section">
                {{ form.contact_email }}
            </div>

            <div class="form-section">
                {{ form.contact_phone }}
            </div>

            <div class="form-section">
                {{ form.newsletter }}
            </div>

            <div class="form-section">
                {{ form.actions }}
            </div>

        </form>

    </div>
</div>