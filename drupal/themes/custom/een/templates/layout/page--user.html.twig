                            <fieldset class="inline">
                                <legend>Frequency of alert:</legend>
                                <div class="multiple-choice">
                                    <input type="radio" name="radio-inline-group" value="Yes" id="daily">
                                    <label for="daily">Daily</label>
                                </div>
                                <div class="multiple-choice">
                                    <input type="radio" name="radio-inline-group" value="No" id="weekly">
                                    <label for="weekly">Weekly</label>
                                </div>
