{% if params is empty %}
    {% set params = {} %}
{% endif %}
<ul class="previous-next-navigation">
    <!-- Previous page link -->
    {% if page > 1 %}
        <li class="previous" ng-show="!heading.searched">
            <a id="pagination-previous" href="{{ url(route, {'page': page - 1}|merge(params)) }}" ng-click="prev()">
                {{ 'Previous'|t }} <span class="visuallyhidden">{{ 'page'|t }}</span>
                <span class="page-numbers">{{ page - 1 }} {{ 'of'|t }} {{ pageTotal }}</span>
            </a>
        </li>
    {% endif %}

    {% if page < pageTotal %}
        <li class="next" ng-show="!heading.searched">
            <a id="pagination-next" href="{{ url(route, {'page': page + 1}|merge(params)) }}" ng-click="next()">
                {{ 'Next'|t }} <span class="visuallyhidden">{{ 'page'|t }}</span>
                <span class="page-numbers">{{ page + 1 }} {{ 'of'|t }} {{ pageTotal }}</span>
            </a>
        </li>
    {% endif %}

    <li class="previous" ng-show="heading.searched && heading.page > 1" ng-cloak>
        <a id="pagination-previous" ng-click="prev()">
            Previous <span class="visuallyhidden">page</span>
            <span class="page-numbers">{[{ heading.page - 1 }]} of {[{ heading.pageTotal }]}</span>
        </a>
    </li>

    <li class="next" ng-show="heading.searched && heading.page < heading.pageTotal" ng-cloak>
        <a id="pagination-next" ng-click="next()">
            Next <span class="visuallyhidden">page</span>
            <span class="page-numbers">{[{ heading.page + 1 }]} of {[{ heading.pageTotal }]}</span>
        </a>
    </li>

</ul>
