<div class="pager-pagination">    
    <nav role="navigation" aria-labelledby="pagination-heading">
        <h4 class="visually-hidden">{{ 'Pagination'|t }}</h4>
        <div>
            <ul>
              {% if items.previous %}
                <li class="previous">
                    <a tabindex="0" href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel') }}>
                        <span aria-hidden="true"><span class="previous-page"></span>{{ items.previous}}Previous page 
                    </a>
                    {#
                        {% if items.current %}
                            <div class="current-page">
                              {% trans %}
                                {{ items.current }} of 
                              {% endtrans %}
                            </div>
                        {% endif %} 
                    #}
                </li>
              {% endif %}
                
              {% if items.next %}
                    <li class="next">
                        <a tabindex="0" href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel') }}>
                            <span aria-hidden="true">{{ items.next}} Next page <span class="next-page"></span></span>
                        </a>
                        {#
                        {% if items.current %}
                            <div class="current-page">
                              {% trans %}
                                {{ items.current }} of 
                              {% endtrans %}
                            </div>
                        {% endif %} #}
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
</div>