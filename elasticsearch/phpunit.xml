<?xml version="1.0" encoding="UTF-8"?>

<phpunit
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.0/phpunit.xsd"
        bootstrap="./vendor/autoload.php"
        colors="true"
        convertErrorsToExceptions="true"
        convertNoticesToExceptions="true"
        convertWarningsToExceptions="true"
        processIsolation="false"
        stopOnFailure="true"
        syntaxCheck="true"
>
    <testsuites>
        <testsuite name="ElasticSearch">
            <directory>module/Console/test</directory>
            <directory>module/Ingest/test</directory>
            <directory>module/Search/test</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist processUncoveredFilesFromWhintitelist="true">
            <directory suffix=".php">module/Console/src</directory>
            <directory suffix=".php">module/Ingest/src</directory>
            <directory suffix=".php">module/Search/src</directory>
        </whitelist>
    </filter>

    <listeners>
        <listener class="Mockery\Adapter\Phpunit\TestListener"/>
    </listeners>
</phpunit>
